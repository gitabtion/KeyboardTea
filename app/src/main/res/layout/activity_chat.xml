<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/bg_chat"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_chat"
        android:paddingBottom="16dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="56dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/ly_input_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/padding_left_right"
        android:layout_marginEnd="@dimen/padding_left_right"
        android:layout_marginBottom="8dp"
        >

        <EditText
            android:id="@+id/edit_chat_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_left_right"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/btn_send"
            android:textColor="@color/white"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_full"
            android:layout_width="wrap_content"
            android:paddingEnd="@dimen/padding_left_right"
            android:paddingStart="@dimen/padding_left_right"
            android:text="发送"/>
    </LinearLayout>
</RelativeLayout>